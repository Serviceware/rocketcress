<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>net5.0;net48</TargetFrameworks>

    <OutputPath>..\..\bin\$(Configuration)</OutputPath>
    <CodeAnalysisRuleSet>../../build/Rocketcress.ruleset</CodeAnalysisRuleSet>
    <ConfigureSlim>true</ConfigureSlim>

    <Description>Contains core functionality for all Rocketcress libraries and tests.</Description>
    <PackageTags>Rocketcress;Test;Tests</PackageTags>
    <Version>1.0.9</Version>
  </PropertyGroup>
  
  <Import Project="../../build/Rocketcress.props" />

  <ItemGroup Condition=" $(IsSlim) == 'true' ">
    <None Include="Serviceware.Rocketcress.Core.targets" />
    <Content Include="Serviceware.Rocketcress.Core.Slim.targets" Pack="true" PackagePath="build;buildCrossTargeting">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup Condition=" $(IsSlim) == 'false' ">
    <PackageReference Include="MSTest.TestFramework" Version="2.1.2" />

    <None Include="Serviceware.Rocketcress.Core.Slim.targets" />
    <Content Include="Serviceware.Rocketcress.Core.targets" Pack="true" PackagePath="build;buildCrossTargeting">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="12.0.3" />
  </ItemGroup>
</Project>
